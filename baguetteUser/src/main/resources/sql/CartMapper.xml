<mapper namespace="CartMapper">
 	
 	
	<resultMap id="cartSelectMap" type="cart">
		<result property="cartNo"		column="cartno" 		jdbcType="INTEGER"/>
		<result property="cartQty"		column="cqty" 			jdbcType="INTEGER" />
		<result property="cartDate"		column="cdate" 			jdbcType="DATE" />
		<result property="customerNo"	column="cno"	 		jdbcType="INTEGER" />
		<result property="breadNo" 		column="bno" 			jdbcType="INTEGER" />
		<collection property="breadList" javaType="java.util.ArrayList" resultMap="breadSelectMap"></collection>
	</resultMap>
	
	<!-- SQL : INSERT -->
	<insert 	id="addCart"	parameterType="cart" >
	 	INSERT
		INTO cart( cartno, cqty, cdate, cno, bno) 
		VALUES	 ( seq_cartno.NEXTVAL,1 ,SYSDATE,#{customerNo} ,#{breadNo} )
	 </insert>
	
	 <!-- SQL : SELECT ONE -->
	 <select 	id="getBread"	parameterType="string"	resultMap="breadSelectMap">
		SELECT
		bname, bprice, bimg 		
		FROM bread
		WHERE bno = #{value}
	 </select>
	 
	<!-- SQL : SELECT LIST -->
	<select  id="getBreadList"  parameterType="string"	resultMap="breadSelectMap">
	  	SELECT
	  	bname, bprice, bno
	  	FROM bread
	  	WHERE sno = #{value}
	  	ORDER BY bno
	</select>
	
	
